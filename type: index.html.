    <script>
        function moveNo() {
            const noBtn = document.getElementById('noBtn');
            const x = Math.random() * (window.innerWidth - 150);
            const y = Math.random() * (window.innerHeight - 150);
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
            noBtn.style.position = 'fixed';
        }

        function accepted() {
            document.getElementById('displayImage').src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHpxZ2NrdXJxc3pueGZ3bmZ3bmZ3bmZ3bmZ3bmZ3bmZ3bmZ3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZEMmY3Q9cw/v96UdzXn9f71e/giphy.gif"; 
            document.getElementById('mainText').innerHTML = "YAY! Raspberry & Peach Forever! ðŸ§¡ðŸ©·";
            document.getElementById('mainText').className = "celebration-text";
            document.getElementById('subText').innerHTML = "See you soon, my Cream! ðŸŒº";
            document.querySelector('.btn-group').style.display = 'none';
        }
    </script>
